{
  "experiment_name": "ConvNeXt Enhanced Training",
  "description": "GPU-optimized training with all improvements",
  
  "model": {
    "num_magnitude_classes": 4,
    "num_azimuth_classes": 9,
    "dropout_rate": 0.4,
    "drop_path_rate": 0.2,
    "use_attention": true,
    "use_hierarchical_azimuth": true,
    "use_directional_features": true
  },
  
  "loss": {
    "focal_alpha": 0.25,
    "focal_gamma": 3.0,
    "label_smoothing": 0.1,
    "task_weights": {
      "magnitude": 0.4,
      "azimuth": 0.6
    },
    "learn_task_weights": false
  },
  
  "optimizer": {
    "type": "adamw",
    "base_lr": 0.0005,
    "weight_decay": 0.05,
    "betas": [0.9, 0.999],
    "eps": 1e-8,
    "gradient_clip_norm": 1.0
  },
  
  "scheduler": {
    "type": "cosine_annealing_warmup",
    "warmup_epochs": 5,
    "warmup_start_lr": 1e-6,
    "min_lr": 1e-6
  },
  
  "training": {
    "epochs": 50,
    "batch_size": 64,
    "gradient_accumulation_steps": 1,
    "mixed_precision": true,
    "ema_decay": 0.9999,
    "early_stopping_patience": 15,
    "save_interval": 5
  },
  
  "data": {
    "dataset_path": "dataset_experiment_3",
    "image_size": 224,
    "num_workers": 8,
    "pin_memory": true
  },
  
  "augmentation": {
    "randaugment_magnitude": 12,
    "randaugment_num_ops": 3,
    "mixup_alpha": 0.4,
    "cutmix_alpha": 1.0,
    "gridmask_enabled": true,
    "gridmask_ratio": 0.6,
    "gridmask_prob": 0.3,
    "noise_enabled": true,
    "noise_snr_range": [10, 30],
    "noise_prob": 0.2,
    "freq_mask_enabled": true,
    "freq_mask_ratio": 0.15,
    "freq_mask_prob": 0.3,
    "time_mask_enabled": true,
    "time_mask_ratio": 0.1,
    "time_mask_prob": 0.3,
    "gain_enabled": true,
    "gain_range": [0.7, 1.3],
    "gain_prob": 0.3,
    "blur_enabled": true,
    "blur_kernel_range": [3, 7],
    "blur_prob": 0.1,
    "progressive_schedule": {
      "0-10": 0.3,
      "10-30": 0.5,
      "30-50": 0.7
    }
  },
  
  "checkpoint": {
    "resume_from": "experiments_convnext/finetune_v3_gpu_20260214_143726/checkpoint_latest.pth",
    "load_optimizer": false,
    "load_scheduler": false
  },
  
  "hardware": {
    "device": "cuda",
    "benchmark": true
  },
  
  "seed": 42,
  
  "notes": [
    "Optimized for RTX 3080/3090 or better",
    "Batch size 64 requires ~10-12GB VRAM",
    "Reduce to 32 for 8GB GPUs",
    "Expected training time: 6-8 hours",
    "Target: 75-80% magnitude, 65-70% azimuth"
  ]
}
